<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <Button
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/findbackpasswordbackid"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_return"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="找回密码"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:background="#000000">

        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/icon_name_white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:hint="账号"
                android:id="@+id/findbackpasswordaccountinputid"
                android:inputType="number"
                android:background="@null"
                android:paddingLeft="10dp"
                android:textColorHint="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <EditText
                android:layout_width="150dp"
                android:id="@+id/findbackpasswordsecuritycodeinputid"
                android:layout_height="50dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:inputType="number"
                android:background="@drawable/input_verify_code"
                android:hint="短信验证码"
                android:textColorHint="#ffffff"
                android:gravity="center" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="点击获取"
                android:textColor="#ffffff"
                android:id="@+id/findbackpasswordgetcodeid"
                android:background="@drawable/button_rounded_rectangle" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="确认"
            android:id="@+id/findbackpasswordensurebtnid"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>